  "sql": "with project_sink_count as (\n  select\n    project,\n    count(*) no_of_sink\n  from\n    gcp.gcp_logging_sink\n  where\n    filter = ''\n    and destination != ''\n        and project_id=projectId\n        and cd_snapshot_version=snapshotVersion\n  group by\n    project\n)\nselect\n  'https://www.googleapis.com/logging/v2/projects/' || s.project resource,\n  case\n    when s.no_of_sink > 0 then 'ok'\n    else 'alarm'\n  end as status,\n  case\n    when s.no_of_sink > 0\n      then 'Sinks configured for all log entries.'\n    else 'Sinks not configured for all log entries.'\n  end as reason\n  \n  , p.project_id as project\nfrom\n  gcp.gcp_project p\n  left join project_sink_count s on s.project = p.project_id\nwhere p.project_id=projectId\nand p.cd_snapshot_version=snapshotVersion;",
