  "index": "2811e3e5-c84a-4ba7-98be-8ace653db26c",
  "description": "It is recommended that a metric filter and alarm be established for Virtual Private Cloud (VPC) network changes.",
  "modName": "gcp_compliance",
  "resourceName": "cis_v400_2_9",
  "severity": "low",
  "sql": "WITH filter_data AS (\n  SELECT \n    m.project AS project, \n    display_name AS alert_name, \n    COUNT(m.name) AS metric_name \n  FROM \n    gcp.gcp_monitoring_alert_policy as a,\n    jsonb_array_elements(conditions) AS filter_condition \n  JOIN \n    gcp.gcp_logging_metric m \n  ON \n    m.filter LIKE '%resource.type=\"gce_network\"%'\n    AND (\n      m.filter LIKE '%protoPayload.methodName=\"beta.compute.routes.insert\"%'\n      OR m.filter LIKE '%protoPayload.methodName=\"beta.compute.routes.delete\"%'\n      OR m.filter LIKE '%protoPayload.methodName=\"beta.compute.routes.update\"%'\n      OR m.filter LIKE '%protoPayload.methodName=\"beta.compute.networks.insert\"%'\n      OR m.filter LIKE '%protoPayload.methodName=\"beta.compute.networks.patch\"%'\n      OR m.filter LIKE '%protoPayload.methodName=\"v1.compute.networks.delete\"%'\n      OR m.filter LIKE '%protoPayload.methodName=\"v1.compute.networks.removePeering\"%'\n      OR m.filter LIKE '%protoPayload.methodName=\"v1.compute.networks.addPeering\"%'\n    )\n  AND \n    filter_condition -> 'conditionThreshold' ->> 'filter' LIKE '%metric.type = \"' || m.metric_descriptor_type || '\"%'\n  WHERE \n    enabled \n\tand m.project_id=projectId\n\tand m.cd_snapshot_version=snapshotVersion\n\tand a.project_id=projectId\n\tand a.cd_snapshot_version=snapshotVersion\n  GROUP BY \n    m.project, display_name, m.name\n) \nSELECT \n  'https://cloudresourcemanager.googleapis.com/v1/projects/' || project_id AS resource, \n  CASE \n    WHEN d.metric_name > 0 THEN 'ok' \n    ELSE 'alarm' \n  END AS status, \n  CASE \n    WHEN d.metric_name > 0 THEN 'Log metric and alert exist for network changes.' \n    ELSE 'Log metric and alert do not exist for network changes.' \n  END AS reason, \n  project_id AS project \nFROM \n  gcp.gcp_project AS p \nLEFT JOIN \n  filter_data AS d ON d.project = project\n  \twhere p.project_id=projectId\n\tand p.cd_snapshot_version=snapshotVersion;",
